{
    "name": "blog-vue-koa",
    "type": "module",
    "version": "1.0.0",
    "scripts": {
        "start": "concurrently \"npm run server\" \"npm run client\"",
        "server": "cd blog-server && npm run serve",
        "client": "cd blog-client && npm run dev",
        "install-all": "npm install && cd blog-client && npm install && cd ../blog-server && npm install",
        "gen": "node scripts/generate-data.js"
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "gray-matter": "^4.0.3"
    }
}
